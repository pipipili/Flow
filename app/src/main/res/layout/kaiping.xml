<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7E0E8">


    <ImageView
        android:id="@+id/bianqian"
        android:layout_width="329dp"
        android:layout_height="494dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="64dp"
        android:layout_weight="1"
        android:background="@drawable/bianqian"
        android:button="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cat3"
        android:layout_width="65dp"
        android:layout_height="67dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="349dp"
        android:layout_weight="1"
        android:background="@drawable/cat4"
        android:button="@null"
        app:layout_constraintBottom_toTopOf="@+id/juxing"
        app:layout_constraintEnd_toEndOf="@+id/bianqian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.377" />

    <ImageView
        android:id="@+id/juxing"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:background="@drawable/juxing"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

