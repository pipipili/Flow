    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/bin"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginHorizontal="@dimen/fab_shadow_size"
            android:layout_weight="1"
            android:background="@drawable/bin"
            android:button="@null" />

        <RadioButton
            android:id="@+id/book"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginHorizontal="@dimen/fab_shadow_size"
            android:layout_weight="1"
            android:background="@drawable/book"
            android:button="@null"
             />


        <RadioButton
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginHorizontal="@dimen/fab_shadow_size"
            android:layout_weight="1"
            android:background="@drawable/list"
            android:button="@null" />

        <RadioButton
            android:id="@+id/geren"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginHorizontal="@dimen/fab_shadow_size"
            android:layout_weight="1"
            android:background="@drawable/geren"
            android:button="@null" />

    </LinearLayout>




    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="28dp"
        android:text="快来开启你的奇妙之旅吧"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/bianqian"
        app:layout_constraintStart_toStartOf="@+id/bianqian" />

    <TextView
        android:id="@+id/kaipingcard"
        android:layout_width="187dp"
        android:layout_height="225dp"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/bianqian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cat3"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>