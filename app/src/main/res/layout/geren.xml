<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--    -->

    <RadioButton
        android:id="@+id/juxing1"
        android:layout_width="379dp"
        android:layout_height="166dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="31dp"
        android:layout_weight="1"
        android:background="@drawable/juxing1"
        android:button="@null"
        app:layout_constraintBottom_toTopOf="@+id/hua2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/cat3"
        android:layout_width="92dp"
        android:layout_height="112dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="90dp"
        android:layout_weight="1"
        android:button="@null"
        android:background="@drawable/cat3"
        app:layout_constraintEnd_toStartOf="@+id/edit_text3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <!--    -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:text="NAME"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/juxing1"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toEndOf="@+id/cat3"
        app:layout_constraintTop_toTopOf="@+id/juxing1" />

    <EditText
        android:id="@+id/edit_text3"
        android:layout_width="124dp"
        android:layout_height="109dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="527dp"
        android:hint="WRITE...."
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cat3" />


    <!--    -->

    <RadioButton
        android:id="@+id/hua2"
        android:layout_width="71dp"
        android:layout_height="69dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_weight="1"
        android:button="@null"
        android:background="@drawable/hua3"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juxing1" />
    <!--    -->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="320dp"
        android:text="HEY很多地方都留下了你的足迹，快来看看吧!"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toEndOf="@+id/hua2"
        app:layout_constraintTop_toBottomOf="@+id/hua2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/reviewOfYear"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="125dp"
        android:textSize="20dp"
        android:text="年回顾"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/reviewOfMonth"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:textSize="20dp"
        android:text="月回顾"
        app:layout_constraintEnd_toEndOf="@+id/reviewOfYear"
        app:layout_constraintTop_toBottomOf="@+id/reviewOfYear" />

    <Button
        android:id="@+id/reviewOfWeek"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:textSize="20dp"
        android:text="周回顾"
        app:layout_constraintEnd_toEndOf="@+id/reviewOfMonth"
        app:layout_constraintTop_toBottomOf="@+id/reviewOfMonth" />


    <Button
        android:id="@+id/Button_edit"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:background="#fff"
        android:text="编辑"
        android:textColor="#AFAFAF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/juxing1"
        app:layout_constraintTop_toBottomOf="@+id/edit_text3"/>

    <Button
        android:id="@+id/Button_save"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:layout_marginEnd="250dp"
        android:layout_marginTop="50dp"
        android:background="#fff"
        android:text="保存"
        android:textColor="#AFAFAF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/juxing1"
        app:layout_constraintTop_toBottomOf="@+id/edit_text3"/>


</androidx.constraintlayout.widget.ConstraintLayout>